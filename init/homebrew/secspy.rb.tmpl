# Homebrew Formula Template. Built by Makefile: `make fomula`
class Secspy < Formula
  desc "{{Desc}}"
  homepage "{{URL}}"
  url "{{URL}}/archive/v{{Version}}.tar.gz"
  sha256 "{{SHA256}}"
  head "{{URL}}"

  depends_on "go" => :build
  depends_on "dep"

  def install
    ENV["GOPATH"] = buildpath

    bin_path = buildpath/"src/github.com/davidnewhall/secspy"
    # Copy all files from their current location (GOPATH root)
    # to $GOPATH/src/github.com/davidnewhall/secspy
    bin_path.install Dir["*"]
    cd bin_path do
      system "dep", "ensure", "--vendor-only"
      system "make", "install", "VERSION=#{version}", "ITERATION={{Iter}}", "PREFIX=#{prefix}", "ETC=#{etc}"
    end
  end

  def caveats
    <<-EOS
    Good luck!
    EOS
  end

  test do
    assert_match "secspy v#{version}", shell_output("#{bin}/secspy -v 2>&1", 2)
  end
end
